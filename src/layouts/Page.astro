---
import "../style.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" href="https://minestom.net/favicon.ico" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="color-scheme" content="light dark" />
        <title>{title}</title>
        <slot name="meta" />
    </head>

    <body>
        <slot />
    </body>
</html>